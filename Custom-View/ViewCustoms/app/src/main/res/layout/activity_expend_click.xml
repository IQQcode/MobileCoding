<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".expend.ExpendClickActivity">

    <RelativeLayout
        android:id="@+id/mParentRootView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#f2f4f7">

        <FrameLayout
            android:id="@+id/clickTargetParentView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="#7bed9f"
            tools:ignore="UselessParent">

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#f2f4f7">

                <View
                    android:id="@+id/clickTargetView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#ff6b81" />

            </FrameLayout>

        </FrameLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/mExpendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:text="扩大点击热区" />

</LinearLayout>