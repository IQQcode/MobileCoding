<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="19dp">

    <FrameLayout
        android:id="@+id/viewContainer"
        android:layout_width="match_parent"
        android:layout_height="121.3dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/person_center_action_drawable_1">

        <!--126.7dp-->
        <ImageView
            android:id="@+id/virtualHeadImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:scaleType="fitXY" />

    </FrameLayout>

    <!--121.3dp-->
    <FrameLayout
        android:id="@+id/virtualHeadContainer02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewContainer"
        android:layout_marginTop="40dp">

        <!--180dp-->
        <ImageView
            android:id="@+id/virtualHeadImage02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/virtual_dynamic_background" />

    </FrameLayout>


    <!--03-->
    <!--高额外加圆角数-->
    <androidx.cardview.widget.CardView
        android:id="@+id/virtualHeadContainer03"
        android:layout_width="match_parent"
        android:layout_height="131.3dp"
        android:layout_below="@id/virtualHeadContainer02"
        android:layout_marginTop="40dp"
        android:clipToPadding="true"
        app:cardCornerRadius="10.3dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/virtualHeadImage03"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:adjustViewBounds="true"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/virtual_dynamic_background" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/cornerImageView"
        android:layout_width="104dp"
        android:layout_height="113dp"
        android:layout_below="@id/virtualHeadContainer03"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="88dp"
        android:background="#ff7f50"
        android:scaleType="fitEnd"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/cornerImageViewTest"
        android:layout_width="104dp"
        android:layout_height="113dp"
        android:layout_below="@id/virtualHeadContainer03"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="50dp"
        android:background="#ffff50"
        android:scaleType="centerCrop"
        android:visibility="gone" />


</RelativeLayout>