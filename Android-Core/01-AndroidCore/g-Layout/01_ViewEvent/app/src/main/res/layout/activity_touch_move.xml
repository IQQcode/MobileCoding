<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".drag.TouchMoveActivity">

    <top.iqqcode.viewevent.drag.DragView

        android:id="@+id/mCustomDragView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:src="@mipmap/location_pin" />

    <top.iqqcode.viewevent.drag.MyView
        android:id="@+id/mCustomMyView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_alignParentEnd="true"
        android:background="#81ecec" />

    <top.iqqcode.viewevent.drag.MyView
        android:id="@+id/mMyDragView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="#4fed12" />

</RelativeLayout>