<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingTop="100dp"
    android:paddingRight="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher_round" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_1"
        android:layout_marginTop="30dp"
        android:hint="@string/hint_username"
        android:lines="1" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_username"
        android:layout_marginTop="10dp"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:lines="1" />

    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_rm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_password"
            android:layout_gravity="left"
            android:layout_weight="3"
            android:text="@string/checkbox_re" />

        <TextView
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/button_cancel"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_second"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/btn_bg_second"
        android:text="SecondActivity"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_third"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_second"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg_third"
        android:text="ThirdActivity"
        android:textAllCaps="false"
        android:textColor="#747d8c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_fourth"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_third"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_selector_fourth"
        android:text="FourthActivity"
        android:textAllCaps="false"
        android:textColor="#747d8c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_fifth"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_fourth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_selector_fifth"
        android:text="FourthActivity"
        android:textAllCaps="false"
        android:textColor="#747d8c"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/ib_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="xmlOnClick"
        android:scaleType="fitCenter"
        android:src="@mipmap/home" />

</RelativeLayout>
